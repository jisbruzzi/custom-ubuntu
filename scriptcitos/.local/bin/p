#!/bin/bash

if [ "$1" = "1" ]; then
	xrandr --output eDP1 --auto
	xrandr --output HDMI1 --off
fi


if [ "$1" = "2" ]; then
	xrandr --output eDP1 --off
	xrandr --output HDMI1 --mode 1920x1080 --scale 1.4x1.4 --right-of eDP1

fi

if [ "$1" = "3" ]; then
	xrandr --output eDP1 --auto
	xrandr --output HDMI1 --mode 1920x1080 --scale 1.4x1.4 --right-of eDP1
fi

if [ "$1" = "4" ]; then
	xrandr --output eDP1 --auto
	xrandr --output HDMI1 --mode 1920x1080 --scale 1x1 --right-of eDP1
	xrandr --output HDMI1 --same-as eDP1
fi

