  bindsym Left exec bash monitor-izq.sh
  bindsym Down exec bash monitor-normal.sh 
  bindsym Right exec bash monitor-der.sh 
  bindsym Up exec bash configurar-monitores.sh 
  bindsym Escape mode "default"
  bindsym Return mode "default"
  bindsym 1 exec p 1
  bindsym 2 exec p 2
  bindsym 3 exec p 3
  bindsym 4 exec p 4
}



