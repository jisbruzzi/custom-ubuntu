# Compton
exec --no-startup-id compton --fading --daemon --inactive-dim 0.1 --fade-in-step=0.05 --fade-out-step=0.05 --shadow

exec --no-startup-id xrdb -load ~/.Xresources



# colores


set_from_resource $sele i3wm.color0 #000000
set_from_resource $dark i3wm.color8 #555555
set_from_resource $fore i3wm.foreground #ffffff
set_from_resource $redd i3wm.color1 #ff0000

# class                 border  backgr. text    indicator child_border
client.focused          $sele $sele $fore $dark   $sele
client.focused_inactive $sele $sele $fore $dark   $sele
client.unfocused        $dark $dark $fore $dark   $dark
client.urgent           $redd $dark $fore $dark   $dark
client.placeholder      $dark $dark $fore $dark   $dark

client.background       $dark


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	i3bar_command i3bar --transparency
        status_command i3status
	font pango: DejaVu Sans Mono, FontAwesome 12
	modifier $mod
    colors {
        background $dark
        statusline $fore
        separator $sele

        focused_workspace  $sele $sele $fore
        active_workspace   $dark $dark $fore
        inactive_workspace $dark $dark $fore
        urgent_workspace   $dark $redd $fore
        binding_mode       $dark $redd $fore
    }
}
bindsym $mod+b bar mode toggle

exec --no-startup-id nm-applet


