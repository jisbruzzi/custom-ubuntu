# kill focused window
bindsym $mod+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec rofi -show run -show-icons -run-command "/bin/bash -i -c '{cmd}'"
# There also is the (new) i3-dmenu-desktop which only displays applications
